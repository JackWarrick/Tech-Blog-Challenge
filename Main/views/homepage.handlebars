<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/posts/{{post.id}}" class = "text-info">{{post.title}}</a>
    </h2>
    <p>
      <!-- Comment -->
      Comment could go here later
    </p>
    <p class="text-muted" >Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
